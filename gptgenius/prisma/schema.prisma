generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tour {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  city        String
  country     String
  title       String
  description String 
  image       String? 
  stops       String
  @@unique([city, country])
}

model Token {
  clerkId String @id
  tokens  Int    @default (1000)
}